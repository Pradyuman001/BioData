<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Data">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="BioData"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#000"
                android:fontFamily="sans-serif-condensed-medium"
                android:background="#E8E6E6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Surname :-"
                    android:textSize="15dp"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/surname_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Surname"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Name :-"
                    android:textSize="15dp"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/name_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Father Name :-"
                    android:textSize="15dp"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/fname_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Father Name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Mother Name :-"
                    android:textSize="15dp"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/mothername_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Mother Name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Brother/Sister Name :-"
                    android:textSize="15dp"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/bsname_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Brother/Sister Name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Date Of Birth :-"
                    android:textSize="15dp"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/dob_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date Of Birth"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Place Of Birth :-"
                    android:textSize="15dp"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/birth_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Place Of Birth"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Education :-"
                    android:textSize="15dp"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/edu_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Education"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Submit"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:backgroundTint="#E8E6E6"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>